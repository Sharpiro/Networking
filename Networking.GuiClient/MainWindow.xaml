<Window x:Class="Networking.GuiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="15">
            <StackPanel Orientation="Horizontal">
                <Button Content="Connect" Width="75" Click="ConnectButton_OnClick"/>
                <Button Content="Disconnect" Width="75" Click="DisconnectButton_OnClick" Margin="5,0,0,0"/>
                <TextBlock Text="IsConnected:" Margin="15,0,0,0" Width="75"/>
                <TextBox Text="{Binding IsConnected}" IsReadOnly="true" />
            </StackPanel>
            <StackPanel Margin="0,15,0,0">
                <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Send Message" Width="100" Click="SendMessageButton_OnClick" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
